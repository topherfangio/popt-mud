{
  "name": "popt-mud",
  "displayName": "Popt MUD Tools",
  "description": "Tools for MUD gaming in VS Code",
  "version": "0.0.1",
  "publisher": "popt-mud",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./extension.js",
  "icon": "resources/icon.svg",
  "contributes": {
    "commands": [
      {
        "command": "popt-mud.showMudView",
        "title": "Show MUD View",
        "icon": "$(terminal)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mud-explorer",
          "title": "MUD Explorer",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "mud-explorer": [
        {
          "type": "webview",
          "id": "mudView",
          "name": "MUD View",
          "contextualTitle": "MUD View",
          "icon": "$(terminal)"
        }
      ]
    }
  },
  "dependencies": {
    "object-hash": "^3.0.0"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "^18.19.6",
    "mocha": "^10.2.0",
    "xml2js": "^0.6.2"
  },
  "scripts": {
    "test": "mocha"
  }
}
